{
  "title": {
    "en": "Channel down",
    "nl": "Kanaal omlaag",
	"de": "Kanal runter"
  },
  "type": "boolean",
  "getable": false,
  "setable": true,
  "$flow": {
    "actions": [
      {
        "id": "channel_down",
        "title": {
          "en": "One channel down",
          "nl": "EÃ©n kanaal omlaag",
		  "de": "Einen Kanal runter"
        }
      }
    ]
  },
  "uiComponent": "button",
  "$speechExamples": {
    "en": ["Switch My TV to the previous channel"],
    "nl": ["Zet Mijn TV op het vorige kanaal"],
	"de": ["Schalte meinen TV auf den vorherigen Kanal"]
  },
  "$speech": {
    "en": {
      "element": {
        "verb": {
          "type": "regex",
          "value": "(switch|turn)"
        },
        "channel": {
          "type": "string",
          "value": "channel"
        },
        "down": {
          "type": "regex",
          "value": "(prev|previous|decrease|(turn\\s)?down)"
        }
      },
      "group": {
        "channelDown": {
          "set": "(verb) && channel && down",
          "ordered": false,
          "allowDisconnect": true,
          "capturingGroup": true,
          "devices": {
            "capabilities": ["channel_down"]
          }
        }
      }
    },
    "nl": {
      "element": {
        "verb": {
          "type": "pos",
          "value": {
            "pos": "VERB"
          }
        },
        "channel": {
          "type": "regex",
          "value": "kanaal|zender"
        },
        "down": {
          "type": "regex",
          "value": "(omlaag|vorige|vorig)"
        }
      }
    }
  }
}